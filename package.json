{
    "name": "@ticket721contracts/refract",
    "private": true,
    "version": "1.0.0",
    "description": "Refract wallet system, implementation and interfaces for smart wallet and smart wallet factories",
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "@openzeppelin/contracts": "2.3.0",
        "erc2280": "1.3.0",
        "truffle": "5.1.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^7.5.0",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "@ticket721/e712": "^0.2.2",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "conventional-changelog-cli": "^2.0.12",
        "coveralls": "^3.0.9",
        "ethers": "^4.0.38",
        "husky": "^1.3.1",
        "solhint": "^2.3.0",
        "solidity-coverage": "^0.7.0-beta.3"
    },
    "editorconfig-cli": [
        "package.json",
        "truffle-config.js",
        "contracts/**/*.sol",
        "migrations/**/*.js"
    ],
    "scripts": {
        "test:truffle": "truffle test",
        "test:coverage": "truffle run coverage",
        "test:editorconfig": "editorconfig-cli",
        "test:lint": "solhint contracts/**/*.sol",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls",
        "test": "npm run test:truffle"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/refract.git"
    },
    "keywords": [
        "erc721"
    ],
    "author": "Iulian Rotaru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/refract/issues"
    },
    "homepage": "https://github.com/ticket721/refract#readme",
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
